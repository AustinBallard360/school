function chrome { #open chrome from commandline
	if [ -z "$1" ]; then # if no argument passed 
		open -a "Google Chrome" "https://www.google.com"; # go to google
	else
		if [[ "$1" == "http"* ]]; then
			open -a "Google Chrome" "$1";
		else
			open -a "Google Chrome" "http://$1"; # or go to provided link
		fi
	fi
}
